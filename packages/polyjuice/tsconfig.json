{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "types": ["node"],
    "lib": ["es2020"],
    "moduleResolution": "node",
    // TODO: "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules", "**/tests", "**/lib"]
}
