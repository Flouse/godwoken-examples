{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "types": ["node"],
      "lib": ["es2020"],
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "allowJs": true
    },
    "exclude": ["**/node_modules", "**/tests", "**/lib"]
  }
  